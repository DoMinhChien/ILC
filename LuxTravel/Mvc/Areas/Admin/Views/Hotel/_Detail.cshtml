                                        <a href="#">
                                            <img src="img/notification/5.jpg" alt="" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>*@
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2">
                    <div class="project-pregress-details">
                        <span><strong>Rating:</strong></span>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="skill-content-3 project-details-progress">
                        <div class="skill">
                            <div class="progress">
                                <div class="progress-bar wow fadeInLeft" data-progress="95%" style="width: 95%;" data-wow-duration="1.5s" data-wow-delay="1.2s">
                                    <span>95%</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="btn-group pull-right">
                        <a class="btn btn-custon-rounded-three btn-success" style="margin-top: 15px;" data-bind="click: insertRoom"><i class="fa fa-plus"></i>&nbsp; New Room</a>
                    </div>
                </div>
            </div>
            <div class="row list-room">

                <table border="1" class="table sparkle-table">
                    <thead>
                    <tr>

                        <th>Room Name</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!-- ko foreach: rooms-->
                    <tr>

                        <td data-bind="text :Name"></td>
                        <td data-bind="text :Name"></td>
                        <td><span ><a data-bind="click: $parent.toggleEditRoom.bind(Id)" href="#"><i class="fa fa-pencil"></i></a></span></td>
                    </tr>
                    <!--/ko-->
                    </tbody>
                </table>
            </div>

            </div>
            </div>
            @Html.Partial("~/Areas/Admin/Views/Room/_ModalInsertRoom.cshtml")
            
        
        </div>

        

    </div>
</div>

